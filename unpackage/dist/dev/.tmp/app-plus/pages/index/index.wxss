}
.upload-image {
	height: 100rpx;
	width: 100rpx;
	margin-top: 500rpx;
}
.operation-box {
	/* position: fixed;
	bottom: 80upx; */
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding-left: 10rpx;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	height: 150rpx;
	width: 750rpx;
}
.scroll {
	position: fixed;
	bottom: -150rpx;
	left: 0;
	background-color: #171717;
}
.operation-scroll {
	white-space: nowrap;
	width: 750rpx;
	-webkit-box-shadow:inset 0px 15px 2px -15px rgba(255, 255, 255, .4);
	        box-shadow:inset 0px 15px 2px -15px rgba(255, 255, 255, .4);
}
.operation-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 10rpx 10rpx 0rpx 10rpx;
}
.active-item {
	border: 4rpx solid #EE9A00;
}
.filter-name {
	line-height: 36rpx;
	font-size: 24rpx;
	color: #e6e6e6;
	font-weight: 600;
}
.filter {
	width: 100rpx;
	height: 100rpx;
	border-radius: 10rpx;
}
.toolbar {
	position: fixed;
	bottom: 0;
	left: 0;
	background-color: #0F0F0F;
	-webkit-box-shadow:inset 0px 15px 5px -15px rgba(255, 255, 255, .4);
	        box-shadow:inset 0px 15px 5px -15px rgba(255, 255, 255, .4);
}
.actions {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
